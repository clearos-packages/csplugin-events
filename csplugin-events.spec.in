# Files
%files
%defattr(-,root,root)
%config(noreplace) %{_sysconfdir}/clearsync.d/csplugin-events.conf
%{_libdir}/libcsplugin-events.so*
%attr(750,clearsync,webconfig) %{_localstatedir}/lib/csplugin-events
%{_bindir}/eventsctl

